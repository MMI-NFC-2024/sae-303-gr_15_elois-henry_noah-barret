---
import Layout from "../layouts/Layout.astro";
import PlotFigureTrajets from "../components/PlotFigureTrajets.astro";

const _raw = await import("../assets/trajets_train_vs_voiture.json", {
  assert: { type: "json" },
});
const trajetsData = ((_raw as any)?.default ?? (_raw as any)) || [];
---

<Layout>
  <main class="max-w-6xl mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">
      Comparaison train vs voiture
    </h1>
    <p class="text-gray-700 mb-8">
      Cette visualisation compare les trajets types en France selon deux
      indicateurs : la <strong>durée moyenne</strong> (en heures) et le <strong
        >coût moyen</strong
      > (en euros).
    </p>

    <PlotFigureTrajets data={trajetsData} />
  </main>
</Layout>
